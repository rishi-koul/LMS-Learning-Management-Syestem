<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Profile Page</h1>

  <h3> <%= msg %></h3>
    <img src="images/<%= user.image %>" alt="" height="200px" class="avatar">

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/profile" method="POST">
            <div class="form-group">
                <label>First Name</label>
                <input class="form-control" name="fName" placeholder="<%= user.fName %>">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input class="form-control" name="lName" placeholder="<%= user.lName %>">
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" placeholder="<%= user.username %>">
            </div>
            <button type="submit" class="btn btn-dark">Update</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
